<table class='table table-striped ui sortable'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Function</th>
      <th class='sorted ascending' colspan='4'>Bounty</th>

    </tr>
  </thead>
  <tbody>
    <%  @jobs = Job.where(coy_id: current_company.id) %>
    <% @jobs.each do |job| %>
    <tr>
      <td><%= job.title %></td>
      <td><%= job.sector %></td>
      <td>$<%= job.bounty %> </td>
      <td><%= link_to 'Edit Posting', edit_job_path(job)%></td>
      <td>View Candidates </td>
      <td><%= link_to 'Remove Posting', job_path(job), method: :delete, remote: true, data:{confirm: "Confirm?"} %>
      </td>

    </tr>
    <% end %>
  </tbody>
</table>